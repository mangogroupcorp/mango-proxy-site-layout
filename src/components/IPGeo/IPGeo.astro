            href="#"
            img="./img/flags/DE.svg"
            title="Германия"
            text="4,050,000 IPs"
          />
        </div>
        <div class="swiper-slide">
          <LocationItem
            size="big"
            href="#"
            img="./img/flags/US.svg"
            title="США"
            text="6,750,000 IP"
          />
        </div>
        <div class="swiper-slide">
          <LocationItem
